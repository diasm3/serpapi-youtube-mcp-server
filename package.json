{
  "name": "youtube-data-mcp",
  "version": "1.0.0",
  "description": "Extract YouTube transcripts and comments for analysis",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "youtube-data-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "start": "node build/index.js",
