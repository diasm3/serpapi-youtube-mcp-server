  },
  "keywords": [
    "mcp",
    "youtube",
    "transcript",
    "comments"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.0",
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "youtube-transcript": "^1.2.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
